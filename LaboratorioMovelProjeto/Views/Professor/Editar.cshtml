@model ProfessorModel

@{
    ViewData["Title"] = "Editar Professor";
}

<div class="text-center">
    <h1 class="display-4">Editar Professor</h1>

</div>

<div class="">
    <form action="" method="post">
        <div class="form-group">
            <label class="control-label">Nome</label>
            <input type="text" class=" form-control col-5" name="Nome" value="@Model.Nome" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control col-5" name="Email" value="@Model.Email" />
        </div>

        <div class="form-group">
            <label>DataNascimento</label>
            <input type="date" class="form-control col-5" name="DataNascimento" value="@Model.DataNascimento" />
        </div>

        <div class="form-group">
            <label>Observação</label>
            <textarea class="form-control col-10" rows="3" name="Observacao" value="">@Model.Observacao</textarea>

        </div>

        <button href="/Professor/index" class="btn btn-secondary btn-lg">Voltar</button>
        


    </form>
</div>
